<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/icon_calendar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_calendar"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tanggalCek"
                    android:layout_toRightOf="@+id/icon_calendar"
                    android:text="2025-02-09"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/icon_time"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_timespan"
                    android:layout_toLeftOf="@id/waktuCek"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/waktuCek"
                    android:layout_alignParentRight="true"
                    android:text="13:20:15"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="15sp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_1"
                    android:layout_below="@id/waktuCek"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/may_green"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">
                        <TextView
                            android:id="@+id/namaKomoditas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Padi"
                            android:textSize="18dp"
                            android:fontFamily="@font/poppins_extra_bold"
                            android:textColor="@color/yellow"/>

                        <TextView
                            android:id="@+id/namaTipe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bahan Pangan"
                            android:textSize="18dp"
                            android:fontFamily="@font/poppins_extra_bold"
                            android:textColor="@color/yellow"
                            android:layout_alignParentRight="true"/>

                        <TextView
                            android:id="@+id/text_hasil_npk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hasil NPK: "
                            android:layout_below="@id/namaKomoditas"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/hasilNPK"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/text_hasil_npk"
                            android:text="12.10.15"
                            android:layout_below="@id/namaKomoditas"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:layout_marginLeft="10dp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/text_rekomendasi_pupuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kadar Pupuk"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/card_1"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_extra_bold"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/hasilKadarPupuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80.23930"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/text_rekomendasi_pupuk"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dalam Satuan kg/ha"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/hasilKadarPupuk"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_black_italic"
                    android:textSize="10dp"/>

            </RelativeLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>