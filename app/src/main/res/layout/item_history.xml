<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/icon_calendar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_calendar"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tanggalCek"
                    android:layout_toRightOf="@+id/icon_calendar"
                    android:text="2025-02-09"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/icon_time"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_timespan"
                    android:layout_toLeftOf="@id/waktuCek"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/waktuCek"
                    android:layout_alignParentRight="true"
                    android:text="13:20:15"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="15sp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_1"
                    android:layout_below="@id/waktuCek"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/may_green"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">
                        <TextView
                            android:id="@+id/namaKomoditas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Padi"
                            android:textSize="18dp"
                            android:fontFamily="@font/poppins_extra_bold"
                            android:textColor="@color/yellow"/>

                        <TextView
                            android:id="@+id/namaTipe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bahan Pangan"
                            android:textSize="18dp"
                            android:fontFamily="@font/poppins_extra_bold"
                            android:textColor="@color/yellow"
                            android:layout_alignParentRight="true"/>

                        <TextView
                            android:id="@+id/text_hasil_npk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hasil NPK: "
                            android:layout_below="@id/namaKomoditas"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/hasilNPK"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/text_hasil_npk"
                            android:text="12.10.15"
                            android:layout_below="@id/namaKomoditas"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:layout_marginLeft="10dp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/row_1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/card_1"
                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/may_green"
                        android:layout_marginLeft="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="13dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_unsur_nitrogen"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nitrogen"
                                android:textSize="12sp"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textColor="@color/white"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="45dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/dataNitrogen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/poppins_extra_bold"
                                android:textSize="20sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ppm"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/poppins_bold"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/may_green"
                        android:layout_marginLeft="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="13dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_unsur_fosfor"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fosfor"
                                android:textSize="12sp"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textColor="@color/white"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="45dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/white">

                            <TextView
                                android:id="@+id/dataFosfor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/poppins_extra_bold"
                                android:textSize="20sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ppm"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/poppins_bold"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/may_green"
                        android:layout_marginLeft="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="13dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_unsur_kalium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kalium"
                                android:textSize="12sp"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textColor="@color/white"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="45dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/white">

                            <TextView
                                android:id="@+id/dataKalium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/poppins_extra_bold"
                                android:textSize="20sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ppm"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/poppins_bold"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row_2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@id/row_1"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/may_green"
                        android:layout_marginLeft="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="13dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_unsur_ph"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="pH"
                                android:textSize="12sp"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textColor="@color/white"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="45dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/white">

                            <TextView
                                android:id="@+id/dataPh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="7.5"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/poppins_extra_bold"
                                android:textSize="20sp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/may_green"
                        android:layout_marginLeft="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="13dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_unsur_kelembaban"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Temperature"
                                android:textSize="12sp"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textColor="@color/white"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="45dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/white">

                            <TextView
                                android:id="@+id/dataTemperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/poppins_extra_bold"
                                android:textSize="20sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="C"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/poppins_bold"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <TextView
                    android:id="@+id/text_rekomendasi_pupuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kadar Pupuk"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/row_2"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_extra_bold"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/hasilKadarPupuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80.23930"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/text_rekomendasi_pupuk"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dalam Satuan kg/ha"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/hasilKadarPupuk"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_black_italic"
                    android:textSize="10dp"/>

            </RelativeLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>