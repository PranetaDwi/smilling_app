<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HasilRekomendasiActivity"
    android:orientation="vertical"
    android:background="@drawable/background_2">


    <LinearLayout
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil Rekomendasi Pupuk"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_hasil_prediksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil Prediksi NPK"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/card_hasil_prediksi"
        android:layout_below="@+id/text_hasil_prediksi">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.10.15"
                    android:fontFamily="@font/poppins_extra_bold"
                    android:layout_gravity="center_vertical"
                    android:textSize="25sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/may_green"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/text_rekomendasi_pupuk"
        android:layout_below="@+id/card_hasil_prediksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rekomendasi Pupuk"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"/>


    <LinearLayout
        android:id="@+id/card_rekomendasi_cadangan_baris2"
        android:layout_below="@+id/text_rekomendasi_pupuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="300dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:src="@drawable/picture_rec2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kadar Pupuk"
                    android:fontFamily="@font/poppins_extra_bold"
                    android:textSize="16dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hasilKadar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40"
                        android:fontFamily="@font/poppins_extra_bold_italic"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" kg/ha"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="15dp"/>

                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>